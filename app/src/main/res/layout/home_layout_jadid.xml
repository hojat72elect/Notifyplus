<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/newbuttonsholder"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        ></LinearLayout>

    <RelativeLayout
        android:id="@+id/togglenot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="5sp"
        >


        <TextView
            android:id="@+id/entext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/matngonde"
            android:textColor="@color/jetblack"
            android:text="@string/enable_notification"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
           />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/matnrigho"
            android:text="@string/enabling_the_notification"
            android:layout_below="@id/entext" />

        <Switch
            android:id="@+id/notifyswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"


            />
    </RelativeLayout>

    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#5000"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="10sp"
        />

    <RelativeLayout
        android:id="@+id/noalayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="5sp"
        >


        <TextView
            android:id="@+id/appsnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/matngonde"
            android:textColor="@color/jetblack"
            android:text="Apps Per Row"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/matnrigho"
            android:text="number of apps in the notification"
            android:layout_below="@id/appsnumber" />

    </RelativeLayout>

    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#5000"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="10sp"
        />
    <RelativeLayout
        android:id="@+id/bgcolorlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="10sp"
        >


        <TextView
            android:id="@+id/bgc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/matngonde"
            android:textColor="@color/jetblack"
           android:text="Background Color"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/matnrigho"
            android:text="background color of the notification"
            android:layout_below="@id/bgc"
            />

    </RelativeLayout>



</LinearLayout>