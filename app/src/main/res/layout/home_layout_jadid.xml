<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/newbuttonsholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"

        ></LinearLayout>

    <RelativeLayout
        android:id="@+id/togglenot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/button">


        <TextView
            android:id="@+id/entext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/enable_notification"
            android:textColor="@color/jetblack"
            android:textSize="@dimen/matngondenormal"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/entextrigho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/entext"
            android:text="@string/enabling_the_notification"
            android:textSize="@dimen/matnrighonormal"
            tools:ignore="SpUsage" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/notifyswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="10sp"
        android:background="#5000" />

    <RelativeLayout
        android:id="@+id/noalayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/button">


        <TextView
            android:id="@+id/appsnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/apps_per_row"
            android:textColor="@color/jetblack"
            android:textSize="@dimen/matngondenormal" />

        <TextView
            android:id="@+id/appsnumberrigho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appsnumber"
            android:text="@string/number_of_apps_in_the_notification"
            android:textSize="@dimen/matnrighonormal"
            tools:ignore="SpUsage" />

    </RelativeLayout>

    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="10sp"
        android:background="#5000" />

    <RelativeLayout
        android:id="@+id/bgcolorlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/button">


        <TextView
            android:id="@+id/bgc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/background_color"
            android:textColor="@color/jetblack"
            android:textSize="@dimen/matngondenormal" />

        <TextView
            android:id="@+id/bgcrigho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bgc"
            android:text="@string/background_color_of_the_notification"
            android:textSize="@dimen/matnrighonormal"
            tools:ignore="SpUsage" />

    </RelativeLayout>
    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="10sp"
        android:background="#5000" />

    <RelativeLayout
        android:id="@+id/floatingtool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/button">


        <TextView
            android:id="@+id/floatext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/control_center"
            android:textColor="@color/jetblack"
            android:textSize="@dimen/matngondenormal"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/floatextrigho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/floatext"
            android:text="@string/toggle_control_center"
            android:textSize="@dimen/matnrighonormal"
            tools:ignore="SpUsage" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/toolswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"


            />
    </RelativeLayout>


</LinearLayout>

