<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/dialog_header" />


    <kerman.ir.hojat72elect.notifyplus.uz.shift.colorpicker.LineColorPicker xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pickerPrimary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:orientation="horizontal"
        app:selectedColorIndex="0" />

    <kerman.ir.hojat72elect.notifyplus.uz.shift.colorpicker.LineColorPicker xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pickerPrimary2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:orientation="horizontal"
        app:selectedColorIndex="0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <View
            android:id="@+id/colorView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <Button
            android:id="@+id/setColorButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="@string/button_set_color" />

    </LinearLayout>


</LinearLayout>