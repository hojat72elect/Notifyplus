<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/dialog_header" />

    <LinearLayout
        android:id="@+id/baseview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:text="@string/tashvightext"
            android:textSize="14sp" />



        <LinearLayout
            android:id="@+id/bp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">


            <kerman.ir.hojat72elect.notifyplus.views.ButtonRectangle

                android:id="@+id/bkhial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#ff4fa0ff"
                android:maxLines="1"
                android:text="@string/canceltext"
                />


            <kerman.ir.hojat72elect.notifyplus.views.ButtonRectangle
                android:id="@+id/bkharid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#ff4fa0ff"
                android:maxLines="1"
                android:text="@string/kharidbuttontext"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>